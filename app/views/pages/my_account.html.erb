<div class="container py-5 mb-5">
  <h2 class="text-white mt-4"><%= current_user.username.capitalize %>'s account</h2>
  <h3 class="text-white mt-2 mb-4">E-mail address: <%= current_user.email %></h3>
  <button type="button" class="btn btn-light">
    <%= link_to "Delete my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %>
  </button>

</div>
