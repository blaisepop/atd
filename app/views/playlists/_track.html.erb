  <div class="track-container" id="track-<%= track.id %>">
    <div class="list-group-item list-group-item-action">
      <div class="d-flex w-100">
        <div class="px-4">
          <% if policy(track).remove? %>
            <%= link_to remove_playlist_track_path(@playlist, track), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-times text-dark"></i>
            <% end %>
          <% end %>
        </div>
        <div class="d-flex w-100 justify-content-between">
          <div>
            <h5 class="mb-1"><%= track.title %></h5>
            <small><%= track.artist %> - <%= track.album %></small>
          </div>
          <div class="d-flex align-items-end flex-column">
            <small class="px-3 pt-2"><%= track.duration.divmod(1000 * 60).first %>:<%= track.duration.divmod(1000 * 60).second/1000 %></small>
            <span class="badge badge-light badge-pill">
             <% if track.spotify_uri.present? %>
                <%= link_to track.spotify_url , target: :_blank do%>
                <i class="fab fa-spotify pt-2 px-3"></i>
            <% end %>
            <% end %>
            </span>
            <span class="badge badge-light badge-pill">

                <%= link_to track.youtube_search , target: :_blank do%>
                <i class="fab fa-youtube pt-2 px-3"></i>
            <% end %>
            </span>
          </div>
        </div>
        <%= render 'tracks/vote', track: track%>
      <!--<%= link_to playlist_track_votes_path(@playlist, track), method: :post do %>
          <button type="button" class="btn btn-dark">
            <i class="fa fa-thumbs-up text-white" aria-hidden="true"></i><span class="badge badge-light badge-pill"><%= track.votes.count %></span>
          </button>
        <% end %>
        -->
      </div>
    </div>
  </div>


