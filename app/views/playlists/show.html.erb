<div class="d-flex w-100 justify-content-between p-5">
  <div>
    <h1><%= @playlist.name %></h1>
    <p>by <%= @playlist.user.username %></p>
  </div>
<h1><span class="badge badge-secondary"><%= @playlist.room_code %></span></h1>
</div>
<br><%= render "tracks/form"%></br>
  <div class="list-group-flush">
    <% @playlist.tracks.each do |track| %>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100">
          <div class="px-4">
            <% if policy(track).remove? %>
              <%= link_to remove_playlist_track_path(@playlist, track), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-times text-dark"></i>
              <% end %>
            <% end %>
          </div>
          <div class="d-flex w-100 justify-content-between">
            <div>
              <h5 class="mb-1"><%= track.title %></h5>
              <small><%= track.artist %> - <%= track.album %></small>
            </div>
            <small class="px-3"><%= track.duration.divmod(1000 * 60).first %>:<%= track.duration.divmod(1000 * 60).second/1000 %></small>
          </div>
          <%= link_to playlist_track_votes_path(@playlist, track), method: :post do %>
            <button type="button" class="btn btn-dark">
              <i class="fa fa-thumbs-up text-white" aria-hidden="true"></i><span class="badge badge-light badge-pill"><%= track.votes.count %></span>
            </button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
