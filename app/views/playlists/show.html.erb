<div class="container py-5 px-5 mb-5">
  <div class="logo2"><b><%= @playlist.room_code %></b></div>
  <div class="d-flex w-100 justify-content-between py-5">
    <div>
      <h2 class="text-white pl-4"><strong><%= @playlist.name %></strong></h2>
        <p class="text-white pl-4">by <%= @playlist.user.username %></p>
        <small class="text-white pl-4"><i class="fa fa-calendar" aria-hidden="true"></i> <%= @playlist.date.day %> of <%= @playlist.date.strftime("%B") %> <%= @playlist.date.year %></small>
    </div>
    <div class="d-flex align-items-end flex-column">
      <% if @playlist.user == current_user %>
      <p> <%=link_to 'Create a Spotify Playlist', call_spotify_path(playlist_id: @playlist.id), class:"btn btn-flat" %></p>
          <div class="d-flex pt-4">
            <% if @playlist.submission == false %>
              <small class="text-white font-weight-lighter pr-1">Submission</small><%= link_to playlist_path(@playlist, "playlist[submission]" => "true"), method: :patch, class: "badge badge-pill badge-secondary align-self-center" do %>
                <i class="fas fa-toggle-off"></i>
              <% end %>
            <% else %>
              <small class="text-white font-weight-lighter pr-1">Submission</small><%= link_to playlist_path(@playlist, "playlist[submission]" => "false"), method: :patch, class: "badge badge-pill badge-secondary align-self-center" do %>
                <i class="fas fa-toggle-on"></i>
              <% end %>
            <% end %>
          </div>
          <div class="d-flex pt-2">
            <% if @playlist.visible == false %>
              <small class="text-white font-weight-lighter pr-1">Visible</small><%= link_to playlist_path(@playlist, "playlist[visible]" => "true"), method: :patch, class: "badge badge-pill badge-secondary align-self-center" do %>
                <i class="fas fa-toggle-off"></i>
              <% end %>
            <% else %>
              <small class="text-white font-weight-lighter pr-1">Visible</small><%= link_to playlist_path(@playlist, "playlist[visible]" => "false"), method: :patch, class: "badge badge-pill badge-secondary align-self-center" do %>
                <i class="fas fa-toggle-on"></i>
              <% end %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="submission">
    <% if @playlist.submission == true %>
      <div class="p-3 visible">
        <%= render "tracks/form"%>
      </div>
    <% else %>
      <div class="p-3 invisible">
        <%= render "tracks/form"%>
      </div>
    <% end %>
  </div>
  <div class="visible">
    <% if @playlist.visible == true %>
      <div class="list-group-flush visible pb-3" id="tracks" data-spotify-token="<%= @token %>" data-playlist-id="<%= @playlist.id %>">
        <% @playlist.tracks.order(votes_count: :DESC).each do |track| %>
          <%= render "track", track: track%>
        <% end %>
      </div>
    <% else %>
      <% if @playlist.user == current_user %>
        <div class="list-group-flush visible pb-3" id="tracks" data-spotify-token="<%= @token %>" data-playlist-id="<%= @playlist.id %>">
        <% @playlist.tracks.order(votes_count: :DESC).each do |track| %>
          <%= render "track", track: track%>
        <% end %>
        </div>
      <% else %>
        <div class="list-group-flush invisible pb-3" id="tracks" data-spotify-token="<%= @token %>" data-playlist-id="<%= @playlist.id %>">
          <% @playlist.tracks.order(votes_count: :DESC).each do |track| %>
            <%= render "track", track: track%>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
