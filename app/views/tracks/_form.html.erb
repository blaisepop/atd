<%= simple_form_for([@playlist,@track], remote: true) do |f| %>
  <%= f.text_field :title, placeholder: 'Song title' %>
  <%= f.text_field :artist, placeholder: 'Artist' %>
  <%= f.text_field :album, placeholder: 'Album' %>
  <%= f.text_field :duration, as: :decimal, placeholder: 'Duration in ms' %>
  <%= f.submit %>
<% end %>
